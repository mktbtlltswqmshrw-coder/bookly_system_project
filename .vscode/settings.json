{
  // ===== إعدادات الواجهة الأساسية =====
  "window.zoomLevel": 0.14,
  "workbench.tree.indent": 14,
  "workbench.list.horizontalScrolling": true,
  // "workbench.editor.tabSizing": "shrink",
  // "workbench.editor.showTabs": "multiple",
  // "workbench.editor.highlightModifiedTabs": true,
  // "workbench.colorTheme": "Default Dark+",
  
  // ===== إعدادات الخطوط =====
  "editor.fontFamily": "'Cascadia Code', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.2,
  "editor.letterSpacing": 0.3,
  "editor.fontLigatures": true,
  "terminal.integrated.fontSize": 12,
  "debug.console.fontSize": 12,
  "editor.suggestFontSize": 12,
  "editor.suggestLineHeight": 18,
  
  // ===== إعدادات المحرر =====
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "all",
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 1,
  "editor.minimap.showSlider": "always",
  "editor.padding.top": 8,
  "editor.padding.bottom": 8,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  
  // ===== إعدادات خاصة بلغة Dart =====
  "[dart]": {
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 120],
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.tabCompletion": "on"
  },
  
  // ===== إعدادات خاصة بلغة JSON =====
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  
  // ===== إعدادات Flutter =====
  "dart.openDevTools": "flutter",
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.previewHotReloadOnSaveWatcher": true,
  "dart.showDartDeveloperLog": false,
  "dart.renameFilesWithClasses": "always",
  "dart.sdkPath": "C:\\flutter\\bin\\cache\\dart-sdk",
  "dart.flutterSdkPath": "C:\\flutter",
  
  // ===== إعدادات إضافية =====
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  
  // ===== إعدادات التشخيص والتطوير المتقدمة =====
  "dart.allowAnalytics": false,
  "dart.allowTestsOutsideTestFolder": true,
  "dart.analysisServerFolding": true,
  "dart.autoImportCompletions": true,
  "dart.closingLabels": true,
  "dart.completeFunctionCalls": true,
  "dart.enableSnippets": true,
  "dart.hotReloadOnSave": "always",
  "dart.insertArgumentPlaceholders": true,
  "dart.lineLength": 120,
  "dart.normalizeWindowsDriveLetters": true,
  "dart.promptToGetPackages": true,
  "dart.promptToRunIfErrors": true,
  "dart.runPubGetOnPubspecChanges": "always",
  "dart.shareDevToolsWithExtensions": true,
  "dart.showInspectorNotificationsForWidgetErrors": true,
  "dart.showMainCodeLens": true,
  "dart.showTestCodeLens": true,
  "dart.triggerSignatureHelpAutomatically": true,
  "dart.updateImportsOnRename": true,
  "dart.warnWhenEditingFilesInPubCache": true,
  "dart.warnWhenEditingFilesOutsideWorkspace": true,
  
  // ===== إعدادات Flutter المتقدمة =====
  "dart.flutterCreateAndroidLanguage": "kotlin",
  "dart.flutterCreateIOSLanguage": "swift",
  "dart.flutterCreateOrganization": "com.example",
  "dart.flutterGenerateLocalizationsOnSave": "always",
  "dart.flutterHotRestartOnSave": "never",
  "dart.flutterOutline": true,
  "dart.flutterSelectDeviceWhenConnected": true,
  "dart.flutterShowEmulators": "always",
  "dart.flutterTrackWidgetCreation": true,
  "dart.maxLogLineLength": 2000,
  
  // ===== إعدادات الاختبار والتشخيص =====
  "dart.showSkippedTests": true,
  "dart.promptToRunIfErrors": true,
  "dart.analysisExcludedFolders": [
    "build/**",
    ".dart_tool/**",
    ".pub-cache/**"
  ],
  
  // ===== إعدادات الأداء والذاكرة =====
  "dart.vmAdditionalArgs": [
    "--disable-dart-dev",
    "--enable-asserts"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/build": true,
    "**/.dart_tool": true,
    "**/.pub-cache": true,
    "**/.pub": true
  },
  "search.exclude": {
    "**/build/": true,
    "**/.dart_tool/": true,
    "**/.pub-cache/": true,
    "**/.pub/": true,
    "**/.flutter-plugins": true,
    "**/.flutter-plugins-dependencies": true
  },
  
  // ===== إعدادات CMake =====
  "cmake.sourceDirectory": "C:/Users/Ahmed-IT/Documents/GitHub/course/linux",
  "java.project.explorer.showNonJavaResources": true,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "git.ignoreLimitWarning": true,
  
  // ===== إعدادات Terminal (حل مشكلة Terminate batch job) =====
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.automationProfile.windows": {
    "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
  },
  "accessibility.signals.terminalBell": {
    "sound": "off"
  },
  "terminal.integrated.enableVisualBell": false
}
